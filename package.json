{
    "name": "userscope-web",
    "version": "0.5.1",
    "description": "",
    "repository": {
        "type": "git",
        "url": "https://github.com/wildlyinaccurate/userscope-web"
    },
    "author": "Joseph Wynn <joseph@wildlyinaccurate.com>",
    "license": "MIT",
    "scripts": {
        "start": "npm run serve",
        "build": "npm run build-ts && npm run build-sass && npm run copy-static-assets",
        "serve": "node dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,Sass\" -c \"cyan.bold,green.bold,yellow.bold\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run watch-sass\"",
        "test": "npm run lint",
        "jest": "jest --forceExit --coverage --verbose",
        "watch-test": "npm run test -- --watchAll",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "build-sass": "node-sass --include-path node_modules --output-style compressed src/public/css/main.scss dist/public/css/main.css",
        "watch-sass": "node-sass --include-path node_modules -w src/public/css/main.scss dist/public/css/main.css",
        "lint": "npm run lint-ts && npm run lint-scss",
        "lint-ts": "tsc --noEmit && eslint \"**/*.{ts,tsx}\" --quiet --fix",
        "lint-scss": "prettier --write src/public/css/*.scss",
        "copy-static-assets": "shx mkdir -p dist/public && shx cp -R src/public/vendor dist/public && shx cp -R src/public/images dist/public && shx cp src/public/favicon.png dist/public",
        "debug": "npm run build && npm run watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,Sass\" -c \"cyan.bold,green.bold,yellow.bold\" \"npm run watch-ts\" \"npm run serve-debug\" \"npm run watch-sass\""
    },
    "prettier": {
        "endOfLine": "lf",
        "printWidth": 120,
        "semi": false
    },
    "dependencies": {
        "@azure/storage-queue": "^12.0.2",
        "@material-ui/core": "^4.9.0",
        "@material-ui/icons": "^4.5.1",
        "async": "^3.1.1",
        "bluebird": "^3.7.2",
        "body-parser": "^1.19.0",
        "bootstrap": "^4.4.1",
        "compression": "^1.7.4",
        "connect-mongo": "^3.2.0",
        "dotenv": "^8.2.0",
        "errorhandler": "^1.5.1",
        "express": "^4.17.1",
        "express-flash": "0.0.2",
        "express-handlebars": "^3.1.0",
        "express-react-views": "^0.11.0",
        "express-session": "^1.17.0",
        "express-validator": "^6.4.0",
        "lusca": "^1.6.1",
        "mongoose": "^5.8.11",
        "nodemailer": "^6.4.2",
        "passport": "^0.4.1",
        "passport-local": "^1.0.0",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "request": "^2.88.0",
        "request-promise": "^4.2.5",
        "userscope-data-models": "^2.1.3",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/async": "^3.0.7",
        "@types/bluebird": "^3.5.29",
        "@types/body-parser": "^1.17.1",
        "@types/chai": "^4.2.8",
        "@types/chart.js": "^2.9.11",
        "@types/compression": "^1.0.1",
        "@types/connect-mongo": "^3.0.0",
        "@types/dotenv": "^8.2.0",
        "@types/errorhandler": "^0.0.32",
        "@types/express": "^4.17.2",
        "@types/express-flash": "0.0.1",
        "@types/express-handlebars": "^3.1.0",
        "@types/express-session": "^1.15.16",
        "@types/jest": "^25.1.1",
        "@types/lusca": "^1.6.1",
        "@types/mongoose": "^5.7.0",
        "@types/node": "^13.7.0",
        "@types/nodemailer": "^6.4.0",
        "@types/passport": "^1.0.2",
        "@types/passport-local": "^1.0.33",
        "@types/react": "^16.9.19",
        "@types/request": "^2.48.4",
        "@types/request-promise": "^4.1.45",
        "@types/supertest": "^2.0.8",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^2.18.0",
        "@typescript-eslint/parser": "^2.18.0",
        "chai": "^4.2.0",
        "concurrently": "^5.1.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.18.1",
        "jest": "^25.1.0",
        "node-sass": "^7.0.0",
        "nodemon": "^2.0.2",
        "prettier": "^1.19.1",
        "shx": "^0.3.2",
        "supertest": "^4.0.2",
        "ts-jest": "^25.1.0",
        "typescript": "^3.7.5"
    }
}
